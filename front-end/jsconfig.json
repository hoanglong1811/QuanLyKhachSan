{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
          "@/*": ["src/*"]
      },
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}